
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-family:Candara; font-size:medium;">
                    <li>@Html.ActionLink("Книги", "Index", "Books")</li>
                    <li>@Html.ActionLink("Авторы", "Index", "Authors")</li>
                    <li>@Html.ActionLink("Магазины и склады", "Index", "Buildings")</li>
                    <li>@Html.ActionLink("Издательства", "Index", "Publishers")</li>
                    <li>@Html.ActionLink("Отчеты", "Index", "Reports")</li>
                    <li>@Html.ActionLink("Справка", "Index", "Help")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["CurrentAdmin"] == null)
                    {
                    <li>@Html.ActionLink("Выполнить вход как администратор", "SignIn", "SignIn")</li>
                    }
                    @if (Session["CurrentAdmin"] != null)
                    {
                        <li>@Html.ActionLink(Session["Address"].ToString(), "AccountSection", "Account", new { Login = Session["Login"].ToString() }, new { })</li>
                        <li>@Html.ActionLink("Выйти", "LogOut", "SignIn")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
